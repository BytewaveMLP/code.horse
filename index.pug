- var ps1 = "bw81@code.horse ~ % "

mixin prompt(command)
	.prompt
		span.ps1 #{ps1}
		span.command #{command}

#command-line
	+prompt('whoami')
	.response
		p Hey there! I'm Bytewave. I make things and break things.
		p ... #[i Mostly] break things.
	+prompt('ls')
	.response: pre profiles.txt    projects.txt    license.txt
	+prompt('cat profiles.txt')
	.response
		table
			tr
				td Discord
				td @Bytewave#4055
			tr
				td Github
				td: a(href='https://github.com/BytewaveMLP') BytewaveMLP
			tr
				td Keybase
				td: a(href='https://keybase.io/bytewave') bytewave
			tr
				td KBFS
				td: a(href='https://keybase.pub/bytewave') bytewave
			tr
				td reddit
				td: a(href='https://reddit.com/u/scirc') /u/scirc
			tr
				td Steam
				td: a(href='https://steamcommunity.com/profiles/76561198049105389') Bytewave
			tr
				td Twitter
				td: a(href='https://twitter.com/BytewaveMLP') @BytewaveMLP
			tr
				td Ulysses Forums
				td: a(href='http://forums.ulyssesmod.net/index.php?action=profile;u=6870') Bytewave
		p Oh, yeah. I also help my friend #[a(href='https://alexandra.moe') Alex] with a little software group we call #[a(href='https://bookhorse.us') Book Horse Software]. :D
	+prompt('cat projects.txt')
	.response: table
		tr
			td: a(href='https://github.com/BytewaveMLP/sleeti') sleeti
			td a file sharing website written in MVC PHP (uses Slim 3, Twig, and Eloquent) (find its story #[a(href='/sleeti.html') here]!)
		tr
			td: a(href='https://github.com/BytewaveMLP/SubCompare') SubCompare
			td a small MVC PHP application to compare the subscriptions of two YouTube accounts using the YouTube Data API
		tr
			td: a(href='https://github.com/BookHorseSoftware/SteamGroupRewardsFramework') SGRF
			td a Garry's Mod Steam group rewards toolkit for developers
		tr
			td: a(href='https://github.com/BytewaveMLP/randibooru') Randibooru
			td a Discord bot experiment that pulls random images from #[a(href='https://derpibooru.org') Derpibooru]
		tr
			td: a(href='https://github.com/BytewaveMLP/Randibooru.js') Randibooru.js
			td Randibooru, but in Node.js!
		tr
			td: a(href='https://github.com/BookHorseSoftware/Coolbooru') Coolbooru!
			td a C# wrapper for the Derpibooru API
	+prompt('cat license.txt')
	.response: p Copyright Â© Eliot Partridge, 2016-17. Licensed under #[a(href='https://creativecommons.org/licenses/by/4.0/') CC 4.0].
	+prompt('exit')
	.response: p Connection to code.horse closed.
